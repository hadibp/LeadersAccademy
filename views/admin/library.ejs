<!doctype html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <link rel="stylesheet" href="../public/stylesheets/style.css" />
    <link rel="stylesheet" href="./public/stylesheets/sidebar.css">
    <link href='https://unpkg.com/boxicons@2.0.7/css/boxicons.min.css' rel='stylesheet'>

  </head>
<style>
          .navbar{
              background-color: #63808C;
          }
          .image-logo{
              max-width: 3%;
              height: 45px;
          }
          .nav-logo{
              margin-left: 40px;
          }
          .nav-end{
              margin-left: 480px;
          }
          @media screen and(max-width:786px){
              .image-logo{
                  max-width: 9%;
                  height: 45px;
              }
              .heading{
                  font-size: 24px;
                  line-height: revert;
                  margin-right: 24px;
              }
          }
          footer {
            background-color: #63808c;
            position: float;
            top: 50px;
            left: 0;
            bottom: 0;
            width: 100%;
            color: #F8F8F8;
            text-align: center;
            
          }
          ul {
              text-align: left;
              list-style-type: none;
              font-size: 18px;
              padding: 0;
             }
          .head-leagel{
              color: #ffffff;
              text-align: left;
              font-size: 18px;
          }
          .fab{
              margin-left: 15px;
              font-size: 20px;
          
          }
          body{
              background-color: #d0edf5;
          }
          .vertical-scroll{
              overflow-y: scroll;
              white-space: nowrap;
              height: 90vh;
          }
		.grid-wrapper {
		  width: 100%;
		  display: flex;
		  justify-content: flex-start;
		  flex-direction: row;
		  flex-wrap: wrap;
		}
		.items {
		  width: 100%;
		  margin-left: 1%;
		  margin-right: 1%;
		  margin-bottom: 15px;
		}
		.items img {
		  max-width: 100%;
		}
		/* Tab */
		@media screen and (min-width: 768px) {
		  .items {
			width: 48%;
		  }
		}
		/* Desktop */
		@media screen and (min-width: 1024px) {
		  .items {
			width: 31.3333%;
		  }
		}
		/* Large */
		@media screen and (min-width: 1440px) {
		  .items {
			width: 23%;
		  }
		}
    .button{
      border-radius: 5px;
      width: 100%;
      height: 50px;
    }
    .vertical-nav{
      position: relative;
      box-shadow: 3px 3px 10px rgba(0, 0, 0, 0.1);
      transition: all 0.4s;
    }
    #sidebar{
      height: 100%;
    }
    .body{
      min-height: 100vh;
      overflow-x: hidden;
     /* background-color: #f5eee4; */
    }
    .nav-link{
      text-transform: capitalize;
    }
    .nav-link:hover{
      background: #f3f2f2;
    }
    .modalbody {
      background-color: #E5E5E5;
      margin-top: 5px;
      
    }
    .modal-dialog {
    max-width: 500px;
    margin: 16.75rem auto;
    position: center;
    bottom: 100px;
  }
  .book_detail{
    font-family: Montserrat;
  }
  .book_image{
    margin: 85px 17px;
    height: 222px;
  }
  .text_detail{
    background-color: #B8D5DE;
    box-shadow: 0 0 10px #5e5b5b;
    border-radius: 12px;
    margin-right: 30px;
    margin-bottom: 30px;
  }
  p{
    margin: 8px;
    margin-left: 0px;
  }
  .default_size{
    width: 200px;
    height: 200px;
  }
</style>
<body>
  <header>
    
    <!-- navbar -->
    <%- include('../partials/navbar'); %>
  </header>
    <!-- Vertical navbar -->
    
    <!-- <%- include('../partials/sidebar'); %> -->
    
<!-- Vertical navbar ends -->
<div class="col-sm-10">
  <div class="row">
    <div class="col-sm-4">
      <h2>Library</h2>
    </div>
    <div class="col-sm-4"></div>
    <div class="col-sm-4">
     
      <form action="/lform" method="get">
        <button type="submit"  class="btn btn-info mr-auto"> add book </button>
      </form>
      

    </div>
  </div>
  <div class="row">
    <div class="grid-wrapper " style="margin-left: 2rem;">
      <div class="row">
        <div class="grid-wrapper">
          <% bookdata.forEach((book) => { %>
            <div class="items">
              <label ><%= book.bookname %></label>
              <img src="../public/images/libraryimages/<%= book.bookimage %>"
              data-toggle="modal"
			        data-target="#Modal-<%= book._id %>"
              class="default_size">
            </div>
            <% }) %>
           
        </div>  
      </div>
    </div>
  </div>
</div>
<!--modal body-->
<% bookdata.forEach((book) => { %>

<div
      class="modal fade"
      id="Modal-<%= book._id %>"
      tabindex="-1"
      role="dialog"
      aria-labelledby="exampleModalLabel"
      aria-hidden="true"
>
      <div class="modal-dialog row" role="document">
        <div class="modal-content modalbody ">
          <div class="row text-black">
          <div class=" col-4 ">
            <img src="../public/images/libraryimages/<%= book.bookimage %>" class="img-fluid book_image" alt="" srcset="">
          </div>
          <div class="bookdetails col-8">
            <div class="modal-header">
              <h5 class="modal-title mt-3" id="exampleModalLabel">Title:  <%= book.bookname %></h5>

              <button
                type="button"
                class="close"
                data-dismiss="modal"
                aria-label="Close">
                <span aria-hidden="true">&times;</span>
              </button>
            </div>
            <div class="modal-body text_detail">
              <p class="book_detail">Author: <%= book.nauthor %></p>
              <p class="book_detail">Publication: <%= book.publication %></p>
              <p class="book_detail">Published by: <%= book.publication %></p>
              <p class="book_detail">Date Of Publish: <%= book.dpublish %></p>
              <p class="book_detail">Date added: <%= book.dadded %></p>
              <p class="book_detail">Number of copies: <%= book.copies %></p>
              <p class="book_detail">Availability: <%= book.bavailability %></p>
              <!-- <p class="book_detail">Status: <p class="custom-control custom-radio custom-control-inline">
                <input type="radio" class="custom-control-input" id="defaultInline1" name="status" value="Read">
                <label class="custom-control-label" for="defaultInline1">Read</label></p>
                <p class="custom-control custom-radio custom-control-inline">
                  <input type="radio" class="custom-control-input" id="defaultInline2" name="status" value="Unread">
                  <label class="custom-control-label" for="defaultInline2">Unread</label>
                </p>
              </p> -->
            </div>
          </div>
        </div>
    </div>      
    </div>
  </div>
  <% }) %>

    <footer>
    
  <!-- footer -->
  <%- include('../partials/footer'); %>
  </footer>
  
  <!-- Optional JavaScript -->
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
  </body>
  </html>