<div class="col-sm-10 ">
    <div class="row">
        <div class="col-sm-5">
            <h2>LDG Events</h2>
        </div>
        <div class="col-sm-6"></div>
        <div class="col-sm-1">
          <form action="/eform" method="get">
          <button type="submit" href="www.techsias.org" class="btn btn-info"> add event </button>
        </form>
        </div>
    </div>


  <div class="row">
    <div class="grid-wrapper " style="margin-left: 2rem;">
      <div class="row">
        <div class="grid-wrapper">
          
          <% eventdata.forEach((eventdata) => { %>
            <div class="items">
              <label for=".items"><%= eventdata.pname %></label>
              <img src="../public/images/eventimages/<%= eventdata.event %>"
              data-toggle="modal"
			        data-target="#eventmodal-<%= eventdata._id %>">
            </div>
            <% }) %>

        </div>  
      </div>
    </div>
  </div>
</div>
<!--modal body-->
<% eventdata.forEach((eventdata) => { %>


<div  class="modal fade"
      id="eventmodal-<%= eventdata._id %>"
      tabindex="-1"
      role="dialog"
      aria-labelledby="exampleModalLabel"
      aria-hidden="true"
>
      <div class="modal-dialog row" role="document">
        <div class="modal-content modalbody ">
          <div class="row text-black">
          <div class=" col-4 ">
            <img src="../public/images/eventimages/<%= eventdata.event %>" class="img-fluid book_image" alt="" srcset="">
          </div>
          <div class="bookdetails col-8">
            <div class="modal-header">
              <h5 class="modal-title mt-3" id="exampleModalLabel">Title: <%= eventdata.pname %></h5>

              <button
                type="button"
                class="close"
                data-dismiss="modal"
                aria-label="Close">
                <span aria-hidden="true">&times;</span>
              </button>
            </div>
            <div class="modal-body text_detail">
              <p class="book_detail">Date: <%= eventdata.edate %></p>
              <p class="book_detail">Time: <%= eventdata.etime %></p>
              <p class="book_detail">Platform: <%= eventdata.eplatform %></p>
              <p class="book_detail">Event Category: <%= eventdata.ecategory %></p>
            </div>
          </div>
        </div>
    </div>      
    </div>
  </div>
  <% }) %>

  

    
